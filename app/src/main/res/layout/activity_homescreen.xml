<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#17191f"
    tools:context=".Homescreen">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
       android:textSize="30dp"
        android:textColor="#f3f3f2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="358dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:id="@+id/text"
        android:textColor="#f3f3f2"
        android:layout_centerHorizontal="true"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"

        android:layout_marginTop="60dp"
        android:background="#f3f3f2" />

    <EditText
        android:id="@+id/date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
       android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter date"
        android:gravity="center_horizontal"
        android:textColor="#f3151c"

        android:textColorHint="#f3151c"
        android:background="@drawable/inputs"
        />

    <EditText
        android:id="@+id/fromTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/inputs"
        android:clickable="false"
        android:cursorVisible="false"
        android:textColor="#f3151c"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:hint="Initial Time"
        android:textColorHint="#f3151c" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:textColor="#f3f3f2"
        android:text="Willing to wait"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:textColor="#f3f3f2"
        android:text="From"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"

        android:textColor="#f3f3f2"
        android:text="To"
        android:layout_marginTop="420dp"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
    android:id="@+id/check"
        android:textColor="#f3f3f2"
        android:text="To"
        android:layout_marginTop="470dp"
        android:textSize="30dp"
        />


    <EditText
        android:layout_width="100dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:textColorHint="#f3151c"
        android:background="@drawable/inputs"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/toTime"

        android:textColor="#f3151c"
        android:hint="@string/end_time"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="685dp"
        android:text="Logout"
        android:id="@+id/logout"

        android:textColor="#f3f3f2"
        android:background="@drawable/logout"
        android:layout_height="40dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/submit"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>